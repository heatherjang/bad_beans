<% @movies.each do |movie| %>
  <div class="col-md-3 movie_display_col">
    <div class="movie_container animated fadeInUp" >
      <div class= "poster_img_bg" style="background-image: url(<%= image_path(movie.poster_img_url)%>)">

        <div class="col-md-12 movie_details_container">
          <div class= "movie_details">
            <div class= "col-md-9 movie_details_col">
              <h4 class="movie_title"><%= movie.title %></h4>
            </div>
            <div class="col-md-3 movie_details_col float_right">
              <% if movie.reviews.any? %>
                <h4 class="movie_review"> <%= movie.review_average %>/10</h4>
              <% else %>
                <h4 class="movie_review"> No reviews </h4>
              <% end %>
            </div>

          </div>
        </div>

      </div>

<!-- 
      <h2><%= link_to movie.title, movie_path(movie) %></h2>
      <h3><%= movie.release_date %></h3>
      <h4>Dir: <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
      <p><%= movie.description%></p> -->
    </div>  
  </div>
<% end %>
