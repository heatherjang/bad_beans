<%= form_for(@movie, html: {class: 'form-horizontal'}) do |f| %>

<!-- Check for submission errors -->
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<!-- Form -->
  <div class="form-group">
    <%= f.label "title", {class: 'col-sm-3 form_label'}%>
    <%= f.text_field "title", {class: 'col-sm-6 form_input'}%>
  </div>
  <div class="form-group">
    <%= f.label "director", {class: 'col-sm-3 form_label'} %>
    <%= f.text_field "director", {class: 'col-sm-6 form_input'} %>
  </div>
  <div class="form-group">
    <%= f.label "release_date", {class: 'col-sm-3 form_label'} %>
    <%= f.date_field "release_date", {class: 'col-sm-6 form_input'} %>
  </div>
  <div class="form-group">
    <%= f.label "runtime_in_minutes", {class: 'col-sm-3 form_label'} %>
    <%= f.number_field "runtime_in_minutes", {class: 'col-sm-3 form_input'} %>
  </div>
  <div class="form-group">
    <%= f.label "description", {class: 'col-sm-3 form_label'} %>
    <%= f.text_area "description", {class: 'col-sm-6 form_input'} %>
  </div>
  <div class="form-group">
    <%= f.label "upload_movie_poster", {class: 'col-sm-3 form_label'} %>
    <%= f.file_field "poster_img", {class: 'col-sm-6 form_input'} %>
  </div>
  <div class="form-group">
    <%= f.label "remote_poster_img_url", "or image URL", {class: 'col-sm-3 form_label'} %>
    <%= f.text_field "remote_poster_img_url", {class: 'col-sm-6 form_input'} %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>





