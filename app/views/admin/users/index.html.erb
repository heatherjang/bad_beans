<h2>Create a user</h2>
<%= render 'users/form_user' %>

<hr>

<h2>All users</h2>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th> 
    <th>Email</th>
  </tr>

  <%= paginate @users %>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.firstname, admin_user_path(user) %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= link_to "edit", edit_user_path(user) %>| <%= link_to "delete", user_path(user), method: :delete, confirm: "Delete this user?" %></td>
    </tr>
  <% end %>
</table>